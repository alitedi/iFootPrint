<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alireza.empreints.TodayActivity"
    android:background="#0e2a3e">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Records :"
        android:id="@+id/textView9"
        android:layout_marginTop="87dp"
        android:textSize="25dp"
        android:background="#0e2a3e"
        android:textColor="#f4f4f4"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Picker"
        android:id="@+id/dateBTN"
        android:background="#0e2a3e"
        android:textColor="#f4f4f4"
        android:src="@drawable/calendar"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mapLocation"></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateText"
        android:textSize="20dp"
        android:background="#0e2a3e"
        android:textColor="#f4f4f4"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapLocation"
        android:layout_below="@+id/dateBTN"
        android:layout_alignRight="@+id/dateBTN"
        android:layout_alignEnd="@+id/dateBTN"
        android:layout_alignLeft="@+id/dateBTN"
        android:layout_alignStart="@+id/dateBTN"
        android:background="#0e2a3e"
        android:textColor="#f4f4f4"
        android:layout_alignBottom="@+id/dateBTN" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Selected Date :"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#f4f4f4"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:id="@+id/sign_out_button"
        android:textSize="18dp"
        android:textColor="#f44737"
        android:background="#0e2a3e"
        android:layout_above="@+id/dateText"
        android:layout_alignRight="@+id/recycler_view"
        android:layout_alignEnd="@+id/recycler_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAddress"
        android:textColor="#f4f4f4"
        android:layout_above="@+id/dateBTN"
        android:layout_alignRight="@+id/dateText"
        android:layout_alignEnd="@+id/dateText"
        android:layout_below="@+id/textView"
        android:textSize="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Your current location:"
        android:id="@+id/textView"
        android:layout_below="@+id/dateText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textSize="18dp" />

</RelativeLayout>
